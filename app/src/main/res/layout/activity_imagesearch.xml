<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="title/name goes here"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summary"
        android:layout_marginTop = "25dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:text="summary of the image contents. first paragraph of wikipedia. "
        android:layout_below="@+id/title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Take another Image"
        android:onClick="onButtonClick"/>
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_view"
        android:text="@string/default_img_search_result"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:onClick="onImageClick"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/button_image_str"
        android:id="@+id/button_image"
        android:layout_gravity="center_horizontal" />-->

</LinearLayout>
